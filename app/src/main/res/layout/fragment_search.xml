<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.codeshastrahealthcarev1.searchFragment">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:elevation="3dp">

        <ImageButton
            android:id="@+id/back_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/back_black" />

        <EditText
            android:layout_width="0dp"
            android:id="@+id/search_edit_text"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="search"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/search_textview"
            android:layout_marginTop="10dp"
            android:text="Search"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <ImageButton
            android:id="@+id/search_img_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search_black_24dp"

            />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        ></View>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">



<android.support.v7.widget.CardView
    android:layout_width="0dp"
    android:layout_weight="1"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:layout_height="180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/hospital_name_search"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/hospital"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:text="Search using \n hospital name"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp"
        android:elevation="8dp"
        android:layout_height="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/doctor_search"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_person_black_24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Search using\n doctors name"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">



        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp"
            android:elevation="8dp"
            android:layout_height="180dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/emergency_search"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_warning_black_24dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="Emergency!\nFInd Nearest hospitals"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp"
            android:elevation="8dp"
            android:layout_height="180dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/speciality_search"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_school_black_24dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-smallcaps"

                    android:text="Find doctors by speciality"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
