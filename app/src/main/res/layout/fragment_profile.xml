<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/loggedInLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/profileImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/user_profile"
                        android:layout_marginTop="20dp"
                        app:civ_border_color="#EEEEEE"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#333333"
                        app:civ_shadow_radius="2" />

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:text="Aneri Shah"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/profileDob"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Height"
                            />
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/height_prof"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11m"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Weight"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/weight_prof"
                            android:layout_marginBottom="8dp"

                            android:text="112cm"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Blood group"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:id="@+id/bloodgroup_prof"
                            android:layout_gravity="center"
                            android:text="B+"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"

                    android:orientation="vertical">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0f0f0"
                        android:paddingBottom="9dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="9dp"
                        android:text="Allergies and Reaction"

                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/allergy_prof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:paddingBottom="9dp"
                        android:paddingLeft="18dp"

                        android:layout_marginBottom="8dp"
                        android:paddingTop="9dp"
                        android:fontFamily="sans-serif"
                        android:text="High blood pressure"
                        android:textColor="@color/black"
                        android:textSize="16sp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0f0f0"
                        android:paddingBottom="9dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="9dp"
                        android:text="Chronic Illness"

                        android:textColor="@color/colorAccent"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/chronic_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:paddingBottom="9dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="9dp"
                        android:text="Penicillin - severe skin rash"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0f0f0"
                        android:paddingBottom="9dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="9dp"
                        android:text="Ongoing medications"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:paddingBottom="9dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="9dp"
                        android:id="@+id/ongoingmedication_prof"

                        android:text="Penicillin - severe skin rash"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0f0f0"
                        android:paddingBottom="9dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="9dp"
                        android:text="Family History"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textStyle="bold"                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/familyhistory_prof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:paddingBottom="9dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="9dp"
                        android:text="Personal Info"
                        android:textColor="@color/black"
                        android:textSize="16sp" />




                    <TextView
                        android:id="@+id/logOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:paddingBottom="9dp"
                        android:paddingTop="9dp"
                        android:text="LOG OUT"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/loggedOutLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
          />

            <android.support.v7.widget.CardView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                app:cardElevation="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="REGISTER / LOGIN TO CONTINUE"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
